<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id = "@+id/linearlayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight = "3"
            android:text="@string/name_text"
            android:textSize = "@dimen/showbox_tag_tsize"
            android:padding = "@dimen/showbox_tag_data_padding"
            android:textStyle="bold"
            android:typeface="monospace"/>

        <EditText
            android:id="@+id/name_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight = "5"
            android:text="@string/database_out_text"
            android:textSize = "@dimen/showbox_data_tsize"
            android:padding = "@dimen/showbox_tag_data_padding"
            android:focusable="false"
            android:inputType="text"/>


    </LinearLayout>

    <LinearLayout
        android:id = "@+id/linearlayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below = "@id/linearlayout1">

        <TextView
            android:id="@+id/gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight = "2"
            android:text="@string/gender_text"
            android:textSize = "@dimen/showbox_tag_tsize"
            android:padding = "@dimen/showbox_tag_data_padding"
            android:textStyle="bold"
            android:typeface="monospace"/>

        <Spinner
            android:id="@+id/gender_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight = "5"
            android:textSize = "@dimen/showbox_data_tsize"
            android:padding = "@dimen/showbox_tag_data_padding" />


    </LinearLayout>

    <LinearLayout
        android:id = "@+id/linearlayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below = "@id/linearlayout2">

        <TextView
            android:id="@+id/age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight = "4"
            android:text="@string/age_text"
            android:textSize = "@dimen/showbox_tag_tsize"
            android:padding = "@dimen/showbox_tag_data_padding"
            android:textStyle="bold"
            android:typeface="monospace"/>

        <EditText
            android:id="@+id/age_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight = "5"
            android:text="@string/database_out_text"
            android:textSize = "@dimen/showbox_data_tsize"
            android:padding = "@dimen/showbox_tag_data_padding"
            android:focusable="false"
            android:inputType="numberDecimal"/>


    </LinearLayout>


    <LinearLayout
        android:id = "@+id/linearlayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below = "@id/linearlayout3">

        <TextView
            android:id="@+id/height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight = "2"
            android:text="@string/height_text"
            android:textSize = "@dimen/showbox_tag_tsize"
            android:padding = "@dimen/showbox_tag_data_padding"
            android:textStyle="bold"
            android:typeface="monospace"/>

        <EditText
            android:id="@+id/height_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight = "5"
            android:text="@string/database_out_text"
            android:textSize = "@dimen/showbox_data_tsize"
            android:padding = "@dimen/showbox_tag_data_padding"
            android:focusable="false"
            android:inputType="numberDecimal"/>


    </LinearLayout>

    <LinearLayout
        android:id = "@+id/linearlayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below = "@id/linearlayout4">

        <TextView
            android:id="@+id/weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight = "2"
            android:text="@string/weight_text"
            android:textSize = "@dimen/showbox_tag_tsize"
            android:padding = "@dimen/showbox_tag_data_padding"
            android:textStyle="bold"
            android:typeface="monospace"/>

        <EditText
            android:id="@+id/weight_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight = "5"
            android:text="@string/database_out_text"
            android:textSize = "@dimen/showbox_data_tsize"
            android:padding = "@dimen/showbox_tag_data_padding"
            android:focusable="false"
            android:inputType="numberDecimal"/>


    </LinearLayout>

    <LinearLayout
        android:id = "@+id/linearlayout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below = "@id/linearlayout5">

        <TextView
            android:id="@+id/bmr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight = "4"
            android:text="@string/bmr_text"
            android:textSize = "@dimen/showbox_tag_tsize"
            android:padding = "@dimen/showbox_tag_data_padding"
            android:textStyle="bold"
            android:typeface="monospace"/>

        <EditText
            android:id="@+id/bmr_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight = "5"
            android:text="@string/database_out_text"
            android:textSize = "@dimen/showbox_data_tsize"
            android:padding = "@dimen/showbox_tag_data_padding"
            android:focusable="false" />


    </LinearLayout>


    <Button
        android:layout_width = "@dimen/check_data_buttonwidth"
        android:layout_height = "wrap_content"
        android:id = "@+id/check_data_back"
        android:text = "@string/check_data_back_text"
        android:textSize = "@dimen/check_data_button_tsize"
        android:padding = "@dimen/check_data_button_padding"
        android:layout_below = "@id/linearlayout6"
        android:layout_marginLeft = "20dp"
        android:layout_marginTop = "20dp" />


    <Button
        android:layout_width = "@dimen/check_data_buttonwidth"
        android:layout_height = "wrap_content"
        android:id = "@+id/check_data_edit"
        android:text = "@string/check_data_edit_text"
        android:textSize = "@dimen/check_data_button_tsize"
        android:padding = "@dimen/check_data_button_padding"
        android:layout_below = "@id/linearlayout6"
        android:layout_alignParentRight = "true"
        android:layout_marginRight = "20dp"
        android:layout_marginTop = "20dp"
        android:textStyle="bold"
        android:typeface="monospace"/>

    <Button
        android:layout_width = "@dimen/check_data_buttonwidth"
        android:layout_height = "wrap_content"
        android:id = "@+id/check_data_OK"
        android:text = "@string/check_data_OK_text"
        android:textSize = "@dimen/check_data_button_tsize"
        android:padding = "@dimen/check_data_button_padding"
        android:layout_below = "@id/linearlayout6"
        android:layout_alignParentRight = "true"
        android:layout_marginRight = "20dp"
        android:layout_marginTop = "20dp"
        android:visibility = "gone"
        android:textStyle="bold"
        android:typeface="monospace"
        android:background="@color/blue"/>


    <Button
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:id = "@+id/check_data_delete"
        android:text = "@string/check_data_delete_text"
        android:textSize = "@dimen/check_data_button_tsize"
        android:padding = "@dimen/check_data_button_padding"
        android:visibility = "gone"
        android:layout_alignParentBottom="true"
        android:background="@color/red"
